{
  "name": "swiss",
  "private": true,
  "version": "0.0.0",
  "description": "Functional custom element library",
  "workspaces": {
    "packages": [
      "packages/swiss",
      "packages/swiss/core",
      "packages/swiss/hooks",
      "packages/swiss-logger",
      "packages/swiss-redux",
      "packages/swiss-thunk",
      "site/content/fixtures/**/*"
    ]
  },
  "scripts": {
    "clean": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' + && yarn cache clean",
    "lint": "eslint 'packages/{*,*/*}/src/**/*.js'",
    "format": "prettier --write 'packages/**/{src,test}/**/*.js' 'scripts/**/*.js' '**/*.md' '!**/build/**'",
    "test": "karma start",
    "test:hooks": "karma start --grep=packages/swiss/hooks/test/**.js",
    "coverage": "codecov",
    "build": "rollup -c scripts/rollup/config.js --silent",
    "watch": "cross-env NODE_ENV=dev rollup -wc scripts/rollup/config.js --silent",
    "serve": "(cd site && hugo serve)",
    "start": "run-p watch serve",
    "docs": "node scripts/docs.js && npm run format:docs",
    "format:docs": "prettier --write '**/*.md'"
  },
  "repository": "luwes/swiss",
  "keywords": [
    "functional",
    "custom",
    "element"
  ],
  "author": "Wesley Luyten <me@wesleyluyten.com> (https://wesleyluyten.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/luwes/swiss/issues"
  },
  "homepage": "https://github.com/luwes/swiss#readme",
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.9.5",
    "@babel/plugin-syntax-export-default-from": "^7.8.3",
    "@babel/plugin-transform-object-assign": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "@babel/runtime": "^7.9.2",
    "@webcomponents/custom-elements": "^1.4.1",
    "ansi-colors": "^4.1.1",
    "babel-eslint": "^10.1.0",
    "babel-plugin-htm": "^3.0.0",
    "chai": "^4.2.0",
    "codecov": "^3.6.5",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-plugin-fp": "^2.3.0",
    "eslint-plugin-import": "^2.20.2",
    "fs-extra": "^9.0.0",
    "jsdoc-to-markdown": "^5.0.3",
    "karma": "^5.0.2",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^3.1.0",
    "karma-coverage": "^2.0.2",
    "karma-mocha": "^2.0.0",
    "karma-rollup-preprocessor": "^7.0.5",
    "karma-sinon": "^1.0.5",
    "karma-sinon-chai": "^2.0.2",
    "lit-html": "^1.2.1",
    "minimist": "^1.2.5",
    "mocha": "^7.1.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "ramda": "^0.27.0",
    "rollup": "2.7.2",
    "rollup-plugin-alias": "^2.2.0",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-gzip": "^2.4.0",
    "rollup-plugin-istanbul": "^2.0.1",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-size": "^0.2.2",
    "rollup-plugin-terser": "^5.3.0",
    "sinon": "^9.0.2",
    "sinon-chai": "^3.5.0"
  }
}
