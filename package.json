{
  "name": "swiss",
  "private": true,
  "version": "0.0.0",
  "description": "Functional custom element library",
  "workspaces": {
    "packages": [
      "packages/*",
      "packages/swiss/core",
      "packages/swiss/hooks",
      "site/content/fixtures/**/*"
    ]
  },
  "scripts": {
    "clean": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' + && yarn cache clean",
    "lint": "eslint 'packages/{*,*/*}/src/**/*.js'",
    "format": "prettier --write 'packages/**/{src,test}/**/*.js' 'scripts/**/*.js' '**/*.md' '!**/build/**'",
    "test": "karma start",
    "test:hooks": "karma start --grep=packages/swiss/hooks/test/**.js",
    "coverage": "codecov",
    "build": "rollup -c scripts/rollup/config.js --silent",
    "watch": "cross-env NODE_ENV=dev rollup -wc scripts/rollup/config.js --silent",
    "serve": "(cd site && hugo serve)",
    "start": "run-p watch serve",
    "docs": "node scripts/docs.js && npm run format:docs",
    "format:docs": "prettier --write '**/*.md'"
  },
  "repository": "luwes/swiss",
  "keywords": [
    "functional",
    "custom",
    "element"
  ],
  "author": "Wesley Luyten <me@wesleyluyten.com> (https://wesleyluyten.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/luwes/swiss/issues"
  },
  "homepage": "https://github.com/luwes/swiss#readme",
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.4",
    "@babel/plugin-syntax-export-default-from": "^7.2.0",
    "@babel/plugin-transform-object-assign": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/runtime": "^7.4.5",
    "@webcomponents/custom-elements": "^1.2.4",
    "ansi-colors": "^3.2.4",
    "babel-eslint": "^10.0.2",
    "babel-plugin-htm": "^2.1.0",
    "chai": "^4.2.0",
    "codecov": "^3.5.0",
    "cross-env": "^5.2.0",
    "eslint": "^5.16.0",
    "eslint-plugin-fp": "^2.3.0",
    "eslint-plugin-import": "^2.17.3",
    "fs-extra": "^8.0.1",
    "jsdoc-to-markdown": "^5.0.0",
    "karma": "^4.1.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage": "^1.1.2",
    "karma-mocha": "^1.3.0",
    "karma-rollup-preprocessor": "^7.0.0",
    "karma-sinon": "^1.0.5",
    "karma-sinon-chai": "^2.0.2",
    "lit-html": "^1.1.2",
    "minimist": "^1.2.0",
    "mocha": "^6.1.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "puppeteer": "^1.17.0",
    "ramda": "^0.26.1",
    "rollup": "1.15.6",
    "rollup-plugin-alias": "^1.5.2",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-gzip": "^2.2.0",
    "rollup-plugin-istanbul": "^2.0.1",
    "rollup-plugin-node-resolve": "^5.0.3",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-size": "^0.0.1",
    "rollup-plugin-terser": "^5.0.0",
    "sinon": "^7.3.2",
    "sinon-chai": "^3.3.0"
  }
}
